.message{data: {message: {id: message.id}}}
  .chat__user
    .chat__user__name
      = message.user.name
    .chat__user__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
      .chat__user__time__delete
        = link_to '削除', "/groups/#{@group.id}/messages/#{message.id}", method: :delete
  .chat__message
    - if message.content.present?
      %p.chat__message__content
        = message.content
    = image_tag message.image.url, class: 'chat__message__image' if message.image.present?
    